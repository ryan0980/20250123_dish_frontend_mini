page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f6f3;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  box-sizing: border-box;
}

.image-preview {
  position: relative;
  width: 100%;
  height: 400rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
}

.swiper {
  width: 100%;
  height: 100%;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.image-counter {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.result-container {
  flex: 1;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 32rpx;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
}

.result-content {
  flex: 1;
}

.loading-container {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #333333;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333333;
}

.item-price {
  font-size: 28rpx;
  color: #ff4d4f;
}

.result-message {
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
}
