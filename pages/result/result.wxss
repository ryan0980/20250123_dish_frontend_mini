page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f6f3;
}

.container {
  flex: 1;
  padding: 32rpx;
  box-sizing: border-box;
}

.image-preview {
  position: relative;
  width: 100%;
  height: 400rpx;
  min-height: 400rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
}

.swiper {
  width: 100%;
  height: 100%;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.image-counter {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.result-container {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.actions {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  padding: 16rpx 32rpx;
  background: #07c160;
  border-radius: 8rpx;
}

.btn-text {
  color: #ffffff;
  font-size: 28rpx;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
}

.result-content {
  -webkit-overflow-scrolling: touch;
  padding-right: 16rpx;
}

.loading-container {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #333333;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333333;
}

.item-price {
  font-size: 28rpx;
  color: #ff4d4f;
}

.result-message {
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
}

.processing-info {
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.time,
.total,
.timestamp {
  font-size: 24rpx;
  color: #666666;
}

.category-section {
  margin-bottom: 32rpx;
}

.category-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #eee;
  margin-bottom: 16rpx;
}

.dish-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.dish-item {
  background: #ffffff;
  padding: 24rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.dish-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.dish-name-group {
  flex: 1;
  margin-right: 24rpx;
}

.dish-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
  display: block;
}

.dish-original {
  font-size: 24rpx;
  color: #666666;
  display: block;
  margin-top: 4rpx;
}

.dish-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: 500;
  white-space: nowrap;
}

.dish-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

.dish-content {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

checkbox {
  margin-top: 8rpx;
}

.result-content::-webkit-scrollbar {
  width: 6rpx;
}

.result-content::-webkit-scrollbar-thumb {
  background-color: #ddd;
  border-radius: 3rpx;
}

.result-content::-webkit-scrollbar-track {
  background-color: transparent;
}

/* 固定在右下角的按钮 */
.float-btn {
  position: fixed;
  right: 32rpx;
  bottom: calc(32rpx + env(safe-area-inset-bottom));
  padding: 20rpx 32rpx;
  background: #07c160;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.float-btn .total-price {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  padding-right: 16rpx;
  border-right: 2rpx solid rgba(255, 255, 255, 0.3);
}

.float-btn .btn-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
}
