<navigation-bar 
  title="设置" 
  back="{{true}}" 
  color="black" 
  background="#FFF">
</navigation-bar>

<view class="container">
  <view class="settings-list">
    <view class="settings-group">
      <view class="settings-item">
        <view class="item-left">
          <text class="item-text">深色模式</text>
        </view>
        <switch class="item-switch" color="#2d2d2d" bindchange="onThemeChange"></switch>
      </view>

      <view class="settings-item">
        <view class="item-left">
          <text class="item-text">消息通知</text>
        </view>
        <switch class="item-switch" color="#2d2d2d" bindchange="onNotificationChange"></switch>
      </view>
    </view>

    <view class="settings-group">
      <view class="settings-item" bindtap="clearCache">
        <view class="item-left">
          <text class="item-text">清除缓存</text>
        </view>
        <text class="cache-size">0.0MB</text>
      </view>

      <view class="settings-item" bindtap="checkUpdate">
        <view class="item-left">
          <text class="item-text">检查更新</text>
        </view>
        <text class="version">v1.0.0</text>
      </view>
    </view>
  </view>
</view> 