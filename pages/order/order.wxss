.container {
  padding: 32rpx;
}

.total-price {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: #ffffff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}

.total-label {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.total-amount {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.order-list {
  padding-bottom: calc(32rpx + 88rpx); /* 为底部总价栏留出空间 */
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-item {
  background: #ffffff;
  padding: 24rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.item-name-group {
  flex: 1;
  margin-right: 24rpx;
}

.item-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
  display: block;
}

.item-original {
  font-size: 24rpx;
  color: #666666;
  display: block;
  margin-top: 4rpx;
}

.item-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.item-desc {
  font-size: 24rpx;
  color: #666666;
  margin-top: 8rpx;
  line-height: 1.5;
}
